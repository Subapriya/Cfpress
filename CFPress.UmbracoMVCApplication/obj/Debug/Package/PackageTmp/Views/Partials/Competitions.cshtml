        <fieldset>
            <legend>Competition Entry</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.FormDetails.Name)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model=>model.FormDetails.Name)
